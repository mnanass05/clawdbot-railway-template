# ============================================
# OpenClaw SaaS - Configuration
# ============================================

# ============================================
# Database (Neon PostgreSQL)
# ============================================
DATABASE_URL=postgresql://user:password@host:5432/dbname?sslmode=require

# ============================================
# Security
# ============================================
# Generate with: openssl rand -hex 32
JWT_SECRET=your-super-secret-jwt-key-min-32-chars-long

# Generate with: openssl rand -hex 16
ENCRYPTION_KEY=your-32-char-encryption-key!!

JWT_EXPIRES_IN=7d

# ============================================
# Admin Configuration
# ============================================
ADMIN_EMAIL=admin@openclaw.dev
ADMIN_PASSWORD=admin123changeMe

# ============================================
# Server Configuration
# ============================================
NODE_ENV=production
PORT=8080

# ============================================
# Railway API (Optional - for auto-deployment)
# ============================================
# Get token from: https://railway.com/account/tokens
RAILWAY_API_TOKEN=your_railway_api_token

# Get these from Railway Dashboard â†’ Project Settings
RAILWAY_PROJECT_ID=your_project_id
RAILWAY_ENVIRONMENT_ID=your_environment_id

# URL of this dashboard (used by workers)
MASTER_URL=https://your-dashboard.up.railway.app

# ============================================
# Resource Limits
# ============================================
MAX_BOTS_PER_USER_FREE=1
MAX_BOTS_PER_USER_PRO=5
MAX_BOTS_PER_USER_BUSINESS=20
MAX_BOTS_TOTAL=100

# ============================================
# Logging
# ============================================
LOG_LEVEL=info
